<div class="fixed top-0 inset-x-0 z-50 flex justify-center m-3">
  <div class="px-6 py-3 card navbar w-full max-w-5xl">
    <div class="flex justify-between items-center flex-wrap gap-2">
      <div class="flex items-center gap-2 flex-nowrap title-text">
        <span class="px-2">ウエルカム!</span>
      </div>
      <button id="menu-toggle" class="block md:hidden text-xl focus:outline-none">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div id="menu" class="text-sm hidden md:flex flex-col md:flex-row gap-3 w-full md:w-auto mt-3 md:mt-0 space-y-2 md:space-y-0">
        <a href="/" class="nav-link relative group flex items-center gap-2">
          <i class="fa-solid fa-house"></i><span>Home</span>
        </a>
        <a href="/projects" class="nav-link relative group flex items-center gap-2">
          <i class="fa-solid fa-folder"></i><span>Projects</span>
        </a>
        <a href="https://blog.naufalfaisa.my.id/" target="_blank" class="nav-link relative group flex items-center gap-2">
          <i class="fa-solid fa-blog"></i><span>Blog</span>
        </a>
      </div>
    </div>
  </div>
</div>

<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const navLinks = document.querySelectorAll(".nav-link");
    navLinks.forEach(link => {
      if (link.tagName === "A" && link.href.startsWith(window.location.origin)) {
        if (link.pathname === window.location.pathname) {
          link.classList.add("active");
        }
      }
    });

    const toggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("menu");

    toggle.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  });
</script>
